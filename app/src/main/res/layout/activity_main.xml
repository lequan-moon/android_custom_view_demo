<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="com.example.quanlm.android_custom_view_demo.MainActivity">

    <Button
        android:id="@+id/btnSimpleListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Simple List View" />
    <Button
        android:id="@+id/btnCustomListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Custom List View" />
    <Button
        android:id="@+id/btnMovieList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Movie List RecyclerView" />
</LinearLayout>
